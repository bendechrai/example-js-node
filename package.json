{
  "name": "example-js-node",
  "description": "Arcjet Node.js and Express example app. Arcjet helps developers protect their apps in just a few lines of code.",
  "license": "Apache-2.0",
  "homepage": "https://arcjet.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arcjet/example-js-node.git"
  },
  "bugs": {
    "url": "https://github.com/arcjet/example-js-node/issues",
    "email": "support@arcjet.com"
  },
  "author": {
    "name": "Arcjet",
    "email": "support@arcjet.com",
    "url": "https://arcjet.com"
  },
  "private": true,
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "predev": "node -e \"if (process.versions.node.split('.')[0] < 22) { console.error('This app requires Node.js 22 or higher'); process.exit(1); }\"",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:css\" \"npm run dev:browser-sync\"",
    "dev:server": "nodemon --exec 'node --env-file=.env.local --experimental-require-module -r ts-node/register' src/server.ts",
    "dev:css": "tailwindcss -i src/styles/globals.css -o dist/public/styles/tailwind.css --watch",
    "dev:browser-sync": "browser-sync start --proxy 'localhost:3002' --port 3000 --files 'src/views/**/*.ejs, dist/public/styles/tailwind.css' --ignore 'node_modules' --reload-delay 1000 --no-inject-changes",
    "build": "npm run build:clean && npm run build:compile && npm run build:copy-views &&npm run build:copy-public && npm run build:css",
    "build:clean": "rimraf dist",
    "build:compile": "tsc",
    "build:copy-views": "copyfiles -u 1 \"src/views/**/*.ejs\" dist/ -V",
    "build:copy-public": "copyfiles -u 1 \"src/public/**/*\" dist/ -V",
    "build:css": "tailwindcss -i src/styles/globals.css -o dist/public/styles/tailwind.css",
    "prestart": "node -e \"if (process.versions.node.split('.')[0] < 22) { console.error('This app requires Node.js 22 or higher'); process.exit(1); }\"",
    "start": "node --experimental-require-module dist/server.js",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@arcjet/decorate": "^1.0.0-alpha.26",
    "@arcjet/next": "^1.0.0-alpha.26",
    "@arcjet/node": "^1.0.0-alpha.26",
    "@fontsource/figtree": "^5.1.0",
    "@fontsource/ibm-plex-mono": "^5.1.0",
    "ejs": "^3.1.10",
    "express": "^4.21.0",
    "express-ejs-layouts": "^2.5.1",
    "express-session": "^1.18.0",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "tailwindcss": "^3.4.12",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/express-ejs-layouts": "^2.5.4",
    "@types/express-session": "^1.18.0",
    "@types/node": "^22.5.5",
    "@types/passport": "^1.0.16",
    "@types/passport-github2": "^1.2.9",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "browser-sync": "^3.0.2",
    "concurrently": "^9.0.1",
    "copyfiles": "^2.4.1",
    "eslint": "^9.10.0",
    "nodemon": "^3.1.6",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.6.0"
  }
}
